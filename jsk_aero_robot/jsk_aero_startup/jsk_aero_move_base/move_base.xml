<!-- original : pr2_navigation_global/move_base.xml (electric) -->
<launch>
  <node pkg="move_base" type="move_base" name="move_base_node"
        clear_params="true" output="screen">
    <!-- launch-prefix="nice -n +10"> -->
    <remap from="~clear_costmaps" to="/move_base/clear_costmaps" />

    <param name="base_global_planner" value="navfn/NavfnROS" />
    <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" />
    <rosparam file="$(find aero_startup)/aero_move_base/config/navfn_ros_planner.yaml" command="load"
              ns="NavfnROS" />
    <rosparam file="$(find aero_startup)/aero_move_base/config/dwa_local_planner.yaml" command="load"
              ns="DWAPlannerROS" />

    <!-- Load common configuration files -->
    <rosparam file="$(find aero_startup)/aero_move_base/config/move_base_params.yaml" command="load" />
    <rosparam file="$(find aero_startup)/aero_move_base/config/recovery_behaviors.yaml" command="load" />

    <!-- Load global navigation specific parameters -->
    <rosparam file="$(find aero_startup)/aero_move_base/config/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find aero_startup)/aero_move_base/config/global_costmap_params.yaml" command="load" ns="global_costmap" />

    <!-- local costmap setting -->
    <rosparam file="$(find aero_startup)/aero_move_base/config/costmap_common.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find aero_startup)/aero_move_base/config/costmap_local.yaml" command="load" ns="local_costmap" />
    <param name="local_costmap/width"  value="6.0"/>
    <param name="local_costmap/height" value="6.0"/>

  </node>

  <node name="cmd_vel_smoother" pkg="cmd_vel_smoother" type="cmd_vel_smoother">
    <remap from="input" to="/navigation/cmd_vel/raw" />
    <remap from="output" to="/navigation/cmd_vel" />

    <param name="desired_rate" value="10.0" />
    <param name="x_acc_lim" value="1.0" />
    <param name="y_acc_lim" value="2.0" />
    <param name="yaw_acc_lim" value="0.1" />
    <param name="decel_factor" value="0.8" />
    <param name="max_count" value="5" />
  </node>
</launch>
