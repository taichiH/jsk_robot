<launch>
<!--   <arg name="map_file" default="$(find jsk_aero_private)/83a3/raw_maps/forum.yaml"/ -->
<!-- > -->
  <arg name="map_file" default="$(find jsk_aero_private)/83a3/raw_maps/room83a3_cost.yaml"/>
  <arg name="spot_file" default="$(find jsk_aero_private)/83a3/spot.yaml"/>

  <include file="$(find aero_startup)/aero_move_base/launch/wheel_bringup.launch"/>

  <!-- Run the map server -->
  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" />
  <node name="costmap_server" pkg="map_server" type="map_server" args="$(arg map_file)">
    <remap from="map" to="costmap"/>
  </node>

  <include file="$(find aero_std)/launch/spot_manager.launch">
    <arg name="file" value="$(arg spot_file)" />
  </include>

  <include file="$(find jsk_aero_startup)/jsk_aero_move_base/amcl.launch"/>

  <include file="$(find jsk_aero_startup)/jsk_aero_move_base/move_base.xml"/>

</launch>

